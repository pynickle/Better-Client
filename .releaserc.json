{
  "branches": [
    "master"
  ],
  "plugins": [
    "@semantic-release/commit-analyzer",
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
            { "type": "feat", "section": "‚ú® Features" },
            { "type": "fix", "section": "üêõ Bug Fixes" },
            { "type": "docs", "section": "üìö Documentation" },
            { "type": "style", "section": "üíÑ Style Improvements" },
            { "type": "ref", "section": "‚ôªÔ∏è Code Refactoring" },
            { "type": "perf", "section": "‚ö° Performance Improvements" },
            { "type": "test", "section": "‚úÖ Tests" },
            { "type": "build", "section": "üì¶ Build System" },
            { "type": "ci", "section": "üë∑ CI/CD" },
            { "type": "chore", "section": "üîß Miscellaneous Changes" },
            { "type": "imp", "section": "üöÄ Improvements" }
          ]
        },
        "parserOpts": {
          "noteKeywords": ["BREAKING CHANGE", "BREAKING CHANGES"]
        }
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "./gradlew :fabric:build -Pmod_version=${nextRelease.version} && ./gradlew :neoforge:build -Pmod_version=${nextRelease.version}"
      }
    ],
    "@semantic-release/changelog",
    [
      "@semantic-release/git",
      {
        "assets": [
          "CHANGELOG.md"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    [
      "semantic-release-minecraft",
      {
        "game_versions": ["1.21.9", "1.21.10"],
        "mod_loaders": "${ loader }",
        "display_name": "[${ name } 1.21.9/10] ${ nextRelease.version }",
        "glob": "${ loader }/build/libs/better_client-${ loader }-${ nextRelease.version }.jar",
        "dependencies": [
          {
            "slug": "architectury-api",
            "type": "required"
          },
          {
            "slug": "yacl",
            "type": "optional"
          }
        ],
        "strategies": [
          {
            "loader": "fabric",
            "name": "Fabric"
          },
          {
            "loader": "neoforge",
            "name": "NeoForge"
          }
        ],
        "curseforge": {
          "project_id": "1250626",
          "java_versions": 21,
          "environments": "client"
        },
        "modrinth": {
          "project_id": "uWsLN21d",
          "version_number": "${ nextRelease.version }+${ loader }"
        }
      }
    ]
  ],
  "preset": "conventionalcommits",
  "releaseRules": [
    {
      "type": "ref",
      "release": "patch"
    },
    {
      "type": "style",
      "release": "patch"
    },
    {
      "type": "imp",
      "release": "patch"
    }
  ]
}